#!/bin/bash

WIDTH=640
HEIGHT=360

X=x

for FILENAME in "$@" ;

do

FILEBASE=${FILENAME%.*}

if [ -e "$FILEBASE.meta" ]
then META='-i "$FILEBASE.meta" -map_metadata 0:1'
else META=''
fi

ffmpeg -i "$FILENAME" $META -c:a aac -ab 192k -s $WIDTH$X$HEIGHT -aspect 16:9 -vcodec libx264 -pix_fmt yuv420p -profile:v main -r 25 -crf 20 -threads 0 "$FILEBASE.temp.mp4"

qt-faststart "$FILEBASE.temp.mp4" "$FILEBASE.$WIDTH$X$HEIGHT.mp4"

rm "$FILEBASE.temp.mp4";

done
